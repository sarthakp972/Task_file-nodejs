<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="POST">
                <input type="text" name="title" class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none" placeholder="Title goes here">
                <textarea name="details" class="block px-5 py-2 resize-none bg-zinc-800 mt-2 w-full rounded-md outline-none" placeholder="Write your task details..."></textarea>
                <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 p-10 flex-wrap">
            <% if (files && files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <p class="details text-white mt-2"><%= val.details %></p>
                        <!-- <a  class="text-blue-600 inline-block mt-2">Read more</a> -->
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet.</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
